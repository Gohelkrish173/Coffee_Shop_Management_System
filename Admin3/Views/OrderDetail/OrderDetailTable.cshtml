@{
    ViewData["Title"] = "Order Detail Table Data";
}
@using System.Data;
@using Admin3.Bal;

<div class="card">
    <div class="card-body bg-warning">
        <span class="text-center">@TempData["ErrorMessage"]</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">Order Data</h5>
        <a class="btn btn-primary mb-3" asp-controller="OrderDetail" asp-action="OrderDetailAddEdit">+ Add</a>
        <a class="btn btn-success mb-3" asp-controller="OrderDetail" asp-action="ExportToExcel">ExportToExcel</a>
        <a class="btn btn-warning mb-3" asp-controller="OrderDetail" asp-action="ExportToPDF">ExportToPDF</a>
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">OrderDetailID</th>
                    <th scope="col">OrderDate</th>
                    <th scope="col">ProductName</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                    <th scope="col">TotalAmount</th>
                    <th scope="col">UserName</th>
                    <th scope="col">Action</th>
                </tr>

            </thead>
            <tbody>
                @foreach (DataRow od in Model.Rows)
                {
                    if (od["UserName"].ToString() == CommonVariable.UserName())
                    {


                        <tr>
                            <th scope="row">@od["OrderDetailID"]</th>
                            <td>@od["OrderNO"]</td>
                            <td>@od["ProductName"]</td>
                            <td>@od["Quantity"]</td>
                            <td>@od["Amount"]</td>
                            <td>@od["TotalAmount"]</td>
                            <td>@od["UserName"]</td>
                            <td class="d-flex justify-content-center">
                                <a method="post" asp-action="OrderDetailAddEdit" asp-controller="OrderDetail" asp-route-OrderDetailID="@Convert.ToInt32(od["OrderDetailID"])">
                                    <button type="submit" class="btn btn-success me-2">Edit</button>
                                </a>
                                <a>
                                    <button type="submit" class="btn btn-danger" onclick="confirmDel('@Url.Action("DelOD","OrderDetail",new {id = @Convert.ToInt32(od["OrderDetailID"])})')">Delete</button>
                                </a>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
        <!-- End Bordered Table -->

    </div>
</div>


<script type="text/javascript">
    function confirmDel(url) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }

    const SMsg = () => {
        Swal.fire({
            icon: 'success',
            title: 'Deleted!',
            text: '@TempData["Message"]'
        });
    }
</script>

@if (TempData["Message"] != null)
{
    <script type="text/javascript">
        SMsg();
    </script>
}