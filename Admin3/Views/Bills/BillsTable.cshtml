@{
    ViewData["Title"] = "Bills Table Data";
}
@using System.Data;
@using Admin3.Bal;

<div class="card">
    <div class="card-body bg-warning">
        <span class="text-center">@TempData["ErrorMsg"]</span>
    </div>
    <div class="card-body">
        <h5 class="card-title">Bills Data</h5>
        <a class="btn btn-primary mb-3" asp-action="BillsAddEdit" asp-controller="Bills" asp-route-BillID=0>+ Add</a>
        <a class="btn btn-success mb-3" asp-action="ExportToExcel" asp-controller="Bills">ExportToExcel</a>
        <a class="btn btn-warning mb-3" asp-action="ExportToPDF" asp-controller="Bills">ExportToPDF</a>
        <!-- Bordered Table -->
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">BillID </th>
                    <th scope="col">BillNumber</th>
                    <th scope="col">BillDate</th>
                    <th scope="col">OrderID</th>
                    <th scope="col">TotalAmount</th>
                    <th scope="col">Discount</th>
                    <th scope="col">NetAmount</th>
                    <th scope="col">UserID</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow B in Model.Rows)
                {
                    if(B["UserName"].ToString() == CommonVariable.UserName())
                    {
                        
                    
                    <tr>
                        <th scope="row">@B["BillID"]</th>
                        <td>@B["BillNumber"]</td>
                        <td>@B["BillDate"]</td>
                        <td>@B["OrderNO"]</td>
                        <td>@B["TotalAmount"]</td>
                        <td>@B["Discount"]</td>
                        <td>@B["NetAmount"]</td>
                        <td>@B["UserName"]</td>
                        <td class="d-flex justify-content-center">
                            <a method="post" asp-controller="Bills" asp-action="BillsAddEdit" asp-route-BillID="@Convert.ToInt32(B["BillID"])">
                                <button type="submit" class="btn btn-success me-2">Edit</button>
                            </a>
                            <a>
                                <button type="submit" class="btn btn-danger me-2" onclick="confirmDelete('@Url.Action("DelBill","Bills",new {id = @Convert.ToInt32(B["BillID"])})')">Delete</button>
                            </a>
                        </td>
                    </tr>
                    }
                }
            </tbody>
        </table>
        <!-- End Bordered Table -->

    </div>
</div>

<script type="text/javascript">
    function confirmDelete(url){
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = url;
            }
        });
    }
</script>

@if(TempData["Message"] != null)
{
    <script type="text/javascript">
        Swal.fire({
            icon: 'success',
            title: 'Deleted!',
            text: '@TempData["Message"]'
        });
    </script>
}